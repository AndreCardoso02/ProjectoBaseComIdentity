@model IEnumerable<AppUser>
@{
    ViewData["Title"] = "Utilizadores";
    int count = 1;
}

<h1 class="bg-info text-white">Todos os Utilizadores</h1>
<a asp-action="Create" class="btn btn-secondary">Adicionar um utilizador</a>

<table class="table table-sm table-bordered table-bordered">
    <tr>
        <th>#</th>
        <th>Nome</th>
        <th>Email</th>
        <th>Role</th>
        <th>Actualizar</th>
        <th>Eliminar</th>
    </tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@(count++)</td>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>--</td>
            <td><a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@user.Id">Actualizar</a></td>
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Eliminar
                    </button>
                </form>
            </td>
        </tr>
    }
</table>